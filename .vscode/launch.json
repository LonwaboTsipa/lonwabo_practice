{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Process",
			"processId": "${command:PickProcess}",
			"port": 5858
		},
		{
			"type": "node",
			"request": "launch",
			"name": "launch RELEASE",
			"program": "${workspaceRoot}/dist/index.js",
			"outFiles": ["${workspaceRoot}/**/*.js"],
			"cwd": "${workspaceRoot}",
			"console": "internalConsole",
			"runtimeArgs": [
				"--harmony",
				"--max-old-space-size=8192"
			],
			"args": [
				"RELEASE"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "launch DEV",
			"program": "${workspaceRoot}/dist/index.js",
			"outFiles": ["${workspaceRoot}/**/*.js"],
			"cwd": "${workspaceRoot}",
			"console": "internalConsole",
			"runtimeArgs": [
				"--harmony",
				"--max-old-space-size=8192"
			],
			"args": [
				"DEV"
			]
		}
	]
}